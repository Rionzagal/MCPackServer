<AuthorizeView>
    <Authorized>
        <MudTooltip Text="@context.User.Identity.Name">
            <MudIconButton Icon="@Icons.Material.Filled.VerifiedUser" Link="Identity/Account/Manage"
            Color="Color.Inherit"/>
        </MudTooltip>
        <MudTooltip Text="Salir">
            <MudIconButton Icon="@Icons.Material.Filled.Logout" Link="Identity/Account/LogOut"
            Color="Color.Inherit"/>
        </MudTooltip>
    </Authorized>
    <NotAuthorized>
        <MudTooltip Text="Registrarse">
            <MudIconButton Icon="@Icons.Material.Filled.AppRegistration" Link="Identity/Account/Register" 
            Color="Color.Inherit"/>
        </MudTooltip>
        <MudTooltip Text="Ingresar">
            <MudIconButton Icon="@Icons.Material.Filled.Login" Link="Identity/Account/Login"
            Color="Color.Inherit"/>
        </MudTooltip>
    </NotAuthorized>
</AuthorizeView>
