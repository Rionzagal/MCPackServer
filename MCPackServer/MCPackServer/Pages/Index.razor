@page "/"

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        <MudText Typo="Typo.h3" Class="m-3" Align="Align.Inherit">
            ¡Bienvenido de nuevo, @context.User.Identity.Name!
        </MudText>
    </Authorized>
    <NotAuthorized>
        <MudText Typo="Typo.h3" Class="m-3" Align="Align.Inherit">
            INICIE SESIÓN
        </MudText>
        <MudText Typo="Typo.h3" Class="m-3" Align="Align.Center">
            Inicie sesión para acceder a los módulos del sistema.
        </MudText>
    </NotAuthorized>
</AuthorizeView>
