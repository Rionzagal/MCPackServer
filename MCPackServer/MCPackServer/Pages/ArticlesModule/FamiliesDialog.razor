<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@TitleIcon" /> @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (_processing)
        {
            <MudProgressCircular Class="m-sm-n1" Size="Size.Large" Indeterminate />
            <MudText Class="m-sm-2">Esperando respuesta de servidor...</MudText>
        }
        else
        {
            <MudContainer Style="max-height: 500px; overflow-y: scroll;">
                @if (States.Delete == (States)State)
                {
                    <div class="form-group">
                        <MudText Typo="Typo.subtitle1" Align="Align.Center">
                            ¿Está seguro de eliminar familia seleccionado?
                        </MudText>
                    </div>
                }
                <MudForm Model="Model" @ref="Form">
                    <MudGrid>
                        <MudItem xs="12">
                            <MudText Typo="Typo.subtitle1" Align="Align.Left">Nombre</MudText>
                            <MudTextField T="string" Placeholder="Nombre" Required RequiredError="Este campo es obligatorio"
                                          @bind-Value="Model.Name" Variant="Variant.Outlined" ReadOnly="@Disabled"/>
                        </MudItem>
                        <MudItem xs="12">
                            <MudText Typo="Typo.subtitle1" Align="Align.Left">Código</MudText>
                            <MudTextField T="string" Placeholder="Código" Required RequiredError="Este campo es obligatorio"
                                          @bind-Value="Model.Code" Variant="Variant.Outlined" ReadOnly="@Disabled"/>
                        </MudItem>
                        <MudItem xs="12">
                            <MudText Typo="Typo.subtitle1" Align="Align.Left">Descripción</MudText>
                            <MudTextField T="string" Placeholder="Descripción" Required RequiredError="Este campo es obligatorio"
                                          @bind-Value="Model.Description" Variant="Variant.Outlined" ReadOnly="@Disabled"/>
                        </MudItem>
                    </MudGrid>
                </MudForm>
            </MudContainer>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" Class="mx-1"
                   OnClick="() => Dialog.Cancel()" Disabled="_processing">
            Cerrar
        </MudButton>
        <MudButton Variant="Variant.Filled" Color="@ButtonColor" Class="mx-1"
                   OnClick="async () => await Submit()" Disabled="_processing">
            Confirmar
        </MudButton>
    </DialogActions>
</MudDialog>