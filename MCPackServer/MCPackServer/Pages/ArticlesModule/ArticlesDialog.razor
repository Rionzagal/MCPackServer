<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@TitleIcon" /> @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (_processing)
        {
            <MudProgressCircular Class="m-sm-n1" Size="Size.Large" Indeterminate />
            <MudText Class="m-sm-2">Esperando respuesta de servidor...</MudText>
        }
        else
        {
            <MudContainer Style="max-height: 500px; overflow-y: scroll;">
                @if (States.Delete == (States)State)
                {
                    <div class="form-group">
                        <MudText Typo="Typo.subtitle1" Align="Align.Center">
                            ¿Está seguro de eliminar artículo seleccionado?
                        </MudText>
                    </div>
                }
                <MudForm Model="Model" @ref="Form">
                    <MudGrid>
                        <MudItem xs="12">
                            <MudText Typo="Typo.subtitle1" Align="Align.Start">Nombre</MudText>
                            <MudTextField T="string" Required RequiredError="Este campo es obligatorio"
                                          @bind-Value="Model.Name" Variant="Variant.Outlined"
                                          Placeholder="Nombre comercial" ReadOnly="@Disabled"/>
                        </MudItem>
                        <MudItem xs="12">
                            <MudText Typo="Typo.subtitle1" Align="Align.Start">Código</MudText>
                            <MudTextField T="string" 
                                          Placeholder="@($"Código: {GroupCode}-{FamilyCode}-****")" 
                                          Required RequiredError="Este campo es obligatorio" 
                                          Validation="(new Func<string, IEnumerable<string>>(ValidateCode))"
                                          @bind-Value="Model.Code" Variant="Variant.Outlined"
                                          ReadOnly="@Disabled"/>
                        </MudItem>
                        <MudItem xs="12">
                            <MudText Typo="Typo.subtitle1" Align="Align.Start">Descripción</MudText>
                            <MudTextField T="string" Placeholder="Descripción de artículo" Required RequiredError="Este campo es obligatorio"
                                          @bind-Value="Model.Description" Variant="Variant.Outlined" ReadOnly="@Disabled"/>
                        </MudItem>
                        <MudItem xs="4">
                            <MudText Typo="Typo.subtitle1" Align="Align.Start">Modelo</MudText>
                            <MudTextField T="string" Placeholder="Modelo" Variant="Variant.Outlined"
                                          @bind-Value="Model.Model" ReadOnly="@Disabled"/>
                        </MudItem>
                        <MudItem xs="4">
                            <MudText Typo="Typo.subtitle1" Align="Align.Start">Marca</MudText>
                            <MudTextField T="string" Placeholder="Marca" @bind-Value="Model.TradeMark" 
                                          Variant="Variant.Outlined" ReadOnly="@Disabled"/>
                        </MudItem>
                        <MudItem xs="4">
                            <MudText Typo="Typo.subtitle1" Align="Align.Start">Unidad</MudText>
                            <MudTextField T="string" Placeholder="Unidad" Required RequiredError="Este campo es obligatorio"
                                          @bind-Value="Model.Unit" Variant="Variant.Outlined" ReadOnly="@Disabled"/>
                        </MudItem>
                    </MudGrid>
                </MudForm>
            </MudContainer>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" Class="mx-1"
                   OnClick="() => Dialog.Cancel()" Disabled="_processing">
            Cerrar
        </MudButton>
        <MudButton Variant="Variant.Filled" Color="@ButtonColor" Class="mx-1"
                   OnClick="async () => await Submit()" Disabled="_processing">
            Confirmar
        </MudButton>
    </DialogActions>
</MudDialog>